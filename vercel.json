{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/btc_icon.png",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "continue": true
        },
        {
            "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json|html|csv|svg|webp))",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
} 